<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (6 characters minimum)" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
  </div>

  <div class="profile-photo">
    <%= f.label :profile_photo %></br>
    <%= f.file_field :profile_photo %>
  </div>

  <div class="action">
    <% f.submit %>
    <button class="button">Sign up</button>
  </div>
<% end %>
<%= render "devise/shared/links" %>
